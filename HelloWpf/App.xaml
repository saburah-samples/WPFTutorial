<Application x:Class="HelloWorldApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="mainWindowStyle" TargetType="{x:Type Window}">
            <Setter Property="Title" Value="Window"></Setter>
            <Setter Property="ResizeMode" Value="NoResize"></Setter>
            <Setter Property="WindowStyle" Value="None"></Setter>
            <Setter Property="WindowState" Value="Maximized"></Setter>
            <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.AppWorkspaceBrushKey}}"></Setter>
        </Style>
    </Application.Resources>
</Application>
